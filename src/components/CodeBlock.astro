---
import { Code } from 'astro-expressive-code/components'

interface Props {
  frame?: 'none' | 'code' | 'terminal' | 'auto' | undefined
  lang?: string
  title?: string
  code: string
  footer?: string; // <--- 新增：明确声明 footer 属性
}

const { frame, title, lang, code, footer } = Astro.props
---

<div
  class="bg-gradient-to-r from-primary/50 to-secondary/50 appearance-none rounded-lg p-px"
>
  <div class="bg-neutral-100/90 text-neutral-500 rounded-lg overflow-clip">
    <Code frame={frame} title={title} lang={lang} code={code} />
    {/* <--- 新增：如果 footer 存在，则渲染一个区域来显示它 ---> */}
    {footer && (
      <div class="px-4 py-2 border-t border-neutral-200 bg-neutral-100 text-sm text-neutral-500">
        {footer}
      </div>
    )}
  </div>
</div>